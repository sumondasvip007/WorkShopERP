
@{
    Layout = null;
}


<div class="row" ng-controller="showAllSupplierController" ng-init="ForLoginSuccess()">
    <div class="col-md-12" ng-show="EditSupplierInfo">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Supplier</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="editSupplierForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="CompanyName">
                                Company Name <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Supplier.CompanyName" id="CompanyName" name="CompanyName" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Address">
                                Address <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Supplier.Address" id="Address" name="Address" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ContactNo">
                                Contact No <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Supplier.ContactNo" id="ContactNo" name="ContactNo" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="UpdateSupplier()">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>





    <div class="col-md-12" ng-show="ShowSupplierList">
        <div class="x_panel">
            <div class="x_title">
                <h2>Supplier List</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <table st-table="rowCollection" st-safe-src="supplierList" class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th colspan="4">
                                    Pages: <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <input st-search="" style="float: right;"  placeholder="global search ..." type="text" />
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="CompanyName">Company Name</th>
                                <th st-sort="Address">Address</th>
                                <th st-sort="ContactNo">Contact No</th>
                                <th>Action</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td>{{row.CompanyName}}</td>
                                <td>{{row.Address}}</td>
                                <td>{{row.ContactNo}}</td>

                                <td class="center">
                                    <button type="button" ng-click="EditSupplier(row)" class="btn btn-sm btn-info">
                                        <i class="glyphicon glyphicon-edit">
                                        </i>
                                    </button>
                                    <button type="button" ng-click="DeleteSupplier(row.SupplierId)" class="btn btn-sm btn-danger">
                                        <i class="glyphicon glyphicon-remove-circle">
                                        </i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>