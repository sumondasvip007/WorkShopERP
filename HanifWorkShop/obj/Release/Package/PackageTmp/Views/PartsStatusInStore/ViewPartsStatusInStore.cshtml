
@{
    Layout = null;
}

<div class="row" ng-controller="PartsStatusInStoreController" ng-init="ForLoginSuccess()">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Parts Status In Store</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="PartsStatusInStoreForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="StoreId">
                                Store <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select ng-model="Store.StoreId" id="StoreId" name="StoreId" class="form-control" ng-options="x.StoreId as x.StoreName for x in storeList" ng-change="ViewReport()" required>
                                    <option value="">Select Store....</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="PartsLoad()">Search</button>
                                &nbsp; &nbsp;
                                <input type="submit" class="btn btn-primary" value="Generate Report" ng-show="reportButton" data-ng-click="GenerateReportForSearchResult()" />
                                &nbsp; &nbsp;
                                <a id="fbplus_01" class="iframe btn btn-primary" ng-href="/PartsStatusInStore/ViewPdfReportForSearchResult/?id={{Store.StoreId}}" ng-show="reportButton" fancyboxable>View Report</a>
                            </div>
                        </div>

                        <table st-table="rowCollection" st-safe-src="Parts" class="table table-striped table-bordered bootstrap-datatable datatable">
                            <thead>
                                <tr>
                                    <th colspan="7">
                                        Pages: <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                        <input st-search="" style="float: right;" placeholder="global search ..." type="text" />
                                    </th>
                                </tr>
                                <tr>
                                    <th st-sort="PartsName" style="text-align: center">Parts Name</th>
                                    <th st-sort="AvailableQuatity" style="text-align: center">Available Quatity</th>
                                    <th st-sort="UnitPrice" style="text-align: center">Unit Price</th>
                                    <th st-sort="Price" style="text-align: center">Total Price</th>
                                    
                                  
                                </tr>

                            </thead>
                            <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td style="text-align: center">{{row.PartsName}}</td>
                                <td style="text-align: center">{{row.AvailableQuatity}}</td>
                                <td style="text-align: right">{{row.UnitPrice | number:2}}</td>
                                <td style="text-align: right">{{row.Price | number:2}}</td>
                            </tr>
                            </tbody>
                            <tr>
                                <td style="text-align: right" colspan="3"><b>Tota Amount</b></td>
                                <td style="text-align: right">{{totalAmount| number:2}}</td>
                            </tr>
                            <tfoot>
                                <tr>
                                    <td colspan="7" class="text-center">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
