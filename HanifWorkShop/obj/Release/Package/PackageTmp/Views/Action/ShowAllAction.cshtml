
@{
    Layout = null;
}


<div class="row" ng-controller="showAllActionController" ng-init="ForLoginSuccess()">
    <div class="col-md-12" ng-show="EditActionInfo">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Action</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="addActionForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ActionName">
                                Action Name <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Action.ActionName" id="ActionName" name="actionName" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ActionDisplayName">
                                Display Name <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Action.ActionDisplayName" id="ActionDisplayName" name="actionDisplayName" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ActionUrl">
                                Url <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Action.ActionUrl" id="ActionUrl" name="actionUrl" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ModuleId">
                                Module <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select ng-model="Action.ModuleId" id="ModuleId" name="moduleId" class="form-control" ng-options="x.ModuleId as x.ModuleName for x in AllModule" required>
                                    <option value="">Select Module....</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 col-xs-12 control-label"></label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" class="flat" ng-model="Action.IsInMenu" value="option1"> Is Menu
                                    </label>
                                    <label>
                                        <input type="checkbox" class="flat" ng-model="Action.IsView" value="option2"> Is View
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="UpdateAction()">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>




    <div class="col-md-12" ng-show="ShowActionList">
        <div class="x_panel">
            <div class="x_title">
                <h2>Action List</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <table st-table="rowCollection" st-safe-src="ActionList" class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th colspan="7">
                                    Pages: <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <input st-search="" style="float: right;" @*class="form-control"*@ placeholder="global search ..." type="text" />
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="ActionName">Action Name</th>
                                <th st-sort="ActionDisplayName">Display Name</th>
                                <th st-sort="ActionUrl">Url</th>
                                <th st-sort="ModuleName">Module Name</th>
                                <th st-sort="IsInMenu">Is In Menu?</th>
                                <th st-sort="IsView">Is View?</th>
                                <th>Action</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td>{{row.ActionName}}</td>
                                <td>{{row.ActionDisplayName}}</td>
                                <td>{{row.ActionUrl}}</td>
                                <td>{{row.ModuleName}}</td>
                                <td>{{row.IsInMenu}}</td>
                                <td>{{row.IsView}}</td>

                                <td class="center">
                                    <button type="button" ng-click="EditAction(row)" class="btn btn-sm btn-info">
                                        <i class="glyphicon glyphicon-edit">
                                        </i>
                                    </button>
                                    <button type="button" ng-click="DeleteAction(row.ActionId)" class="btn btn-sm btn-danger">
                                        <i class="glyphicon glyphicon-remove-circle">
                                        </i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="5"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>