
@{
    Layout = null;
}


<div class="row" ng-controller="addAspNetUserController" ng-init="ForLoginSuccess()">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Add User</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="AspNetUserForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UserFullName">
                                User Full Name
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="AspNetUser.UserFullName" id="UserFullName" name="userFullName" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="UserName">
                                Username <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="AspNetUser.UserName" id="UserName" name="userName" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Email">
                                Email <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="email" ng-model="AspNetUser.Email" id="Email" name="Email" class="form-control col-md-7 col-xs-12" required>
                                <p class="error" ng-show="AspNetUserForm.Email.$error.email || submitted">Please Provide correct email address</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="PhoneNumber">
                                Phone Number <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="AspNetUser.PhoneNumber" id="PhoneNumber" name="phoneNumber" class="form-control col-md-7 col-xs-12" required positive-numbers-only>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Password">
                                Password <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="password" ng-model="AspNetUser.Password" id="Password" name="Password" class="form-control col-md-7 col-xs-12" ng-minlength="6" required>
                                <p class="error" ng-show="AspNetUserForm.Password.$error.minlength || submitted">Password must be at least be 6 digits</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ConfirmPassword">
                                Confirm Password <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="password" ng-model="AspNetUser.ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" class="form-control col-md-7 col-xs-12" ng-minlength="6" required ng-blur="CheckPassword()">
                                <p class="error" ng-show="AspNetUserForm.ConfirmPassword.$error.mismatch || submitted">Password and confirm password does not match</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="SaveUser()">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>