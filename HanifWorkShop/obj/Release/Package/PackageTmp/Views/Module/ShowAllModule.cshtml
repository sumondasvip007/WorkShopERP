
@{
    Layout = null;
}

<div class="row" ng-controller="showAllModuleController" ng-init="ForLoginSuccess()">
    <div class="col-md-12" ng-show="EditModuleInfo">
        <div class="x_panel">
            <div class="x_title">
                <h2>Edit Module</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="addModuleForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ModuleName">
                                Module Name <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Module.ModuleName" id="ModuleName" name="moduleName" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ModuleOrder">
                                Module Order <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Module.ModuleOrder" id="OduleOrder" name="moduleOrder" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="ModuleIcon">
                                Module Icon <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="Module.ModuleIcon" id="ModuleIcon" name="moduleIcon" class="form-control col-md-7 col-xs-12" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="UpdateModule()">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>





    <div class="col-md-12" ng-show="ShowModuleList">
        <div class="x_panel">
            <div class="x_title">
                <h2>Module List</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <table st-table="rowCollection" st-safe-src="AllModule" class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th colspan="4">
                                    Pages: <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                    <input st-search="" style="float: right;" @*class="form-control"*@ placeholder="global search ..." type="text" />
                                </th>
                            </tr>
                            <tr>
                                <th st-sort="ModuleName">Name</th>
                                <th st-sort="ModuleOrder">Order</th>
                                <th st-sort="ModuleIcon">Icon</th>
                                <th>Action</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="row in rowCollection">
                                <td>{{row.ModuleName}}</td>
                                <td>{{row.ModuleOrder}}</td>
                                <td>{{row.ModuleIcon}}</td>

                                <td class="center">
                                    <button type="button" ng-click="EditModule(row)" class="btn btn-sm btn-info">
                                        <i class="glyphicon glyphicon-edit">
                                        </i>
                                    </button>
                                    <button type="button" ng-click="DeleteModule(row.ModuleId)" class="btn btn-sm btn-danger">
                                        <i class="glyphicon glyphicon-remove-circle">
                                        </i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>