
@{
    Layout = null;
}


<div class="row" ng-controller="ViewBusInformationForSpecificBusRegistrationNoController" ng-init="ForLoginSuccess()">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Bus Information For Specific Bus Registration No</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="ViewBusInformationForSpecificBusRegistrationNoForm">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="RegistrationNo">
                                Registration No <span class="required" style="color: red">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @*<select ng-model="BusInformation.RegistrationNo" id="RegistrationNo" name="RegistrationNo" class="form-control" ng-options="x.RegistrationNo as x.RegistrationNo for x in RegistrationNoList" ng-change="RegistrationNoClick()" required>
                                    <option value="">Select Registration No....</option>
                                </select>*@
                                <ui-select ng-model="RegistrationList.selected" theme="bootstrap" required>

                                    <ui-select-match placeholder="Select or search...">{{$select.selected.RegistrationNo}}</ui-select-match>

                                    <ui-select-choices repeat="e in RegistrationNoList | filter: $select.search">
                                        {{e.RegistrationNo}}

                                    </ui-select-choices>

                                </ui-select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="SearchBusInformationForSpecificBusRegistrationNo()">Search</button>
                                &nbsp; &nbsp;
                                <input type="submit" class="btn btn-primary" value="Generate Report" ng-show="reportButton" data-ng-click="GenerateReportForSearchResult()" />
                                &nbsp; &nbsp;
                                <a id="fbplus_01" class="iframe btn btn-primary" ng-href="/BusInformation/ViewPdfReportForSearchResult/?RegistrationNo={{RegistrationList.selected.RegistrationNo}}" ng-show="reportButton" fancyboxable>View Report</a>
                            </div>
                        </div>

                        <table st-table="rowCollection" st-safe-src="BusInformationList" class="table table-striped table-bordered bootstrap-datatable datatable">
                            <thead>
                                <tr>
                                    <th colspan="7">
                                        Pages: <select ng-model="itemsByPage" ng-options="item for item in itemsPerPage"></select>
                                        <input st-search="" style="float: right;" placeholder="global search ..." type="text" />
                                    </th>
                                </tr>
                                <tr>
                                    <th st-sort="ModelNo">Model No</th>
                                    <th st-sort="ChassisNo">Chassis No</th>
                                    <th st-sort="RouteName">Route</th>
                                </tr>

                            </thead>
                            <tbody>
                                <tr ng-repeat="row in rowCollection">
                                    <td>{{row.ModelNo}}</td>
                                    <td>{{row.ChassisNo}}</td>
                                    <td>{{row.RouteName}}</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7" class="text-center">
                                        <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="7"></div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
