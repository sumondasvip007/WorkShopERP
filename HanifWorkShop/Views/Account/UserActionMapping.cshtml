@{
    Layout = null;
}


<div class="row" ng-controller="UserPermissionController" ng-init="ForLoginSuccess()">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>User Action Mapping</h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <form class="form-horizontal" name="UserPermissionForm">
                        <div class="form-group" ng-init="LoadInitial()">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="user_id">
                                User Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select ng-model="User.user_id" id="user_id" name="user_id" class="form-control" ng-options="user.value as user.text for user in userList" ng-change="LoadActionListForUser(User.user_id)" required>
                                    <option value="">Select User....</option>
                                </select>
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="user_id">
                                    User Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select ng-model="User.user_id" id="user_id" name="user_id" class="form-control" ng-options="user.Id as user.UserName for user in UserList" ng-change="LoadActionListForUser(User.user_id)" required>
                                        <option value="">Select User....</option>
                                    </select>
                                </div>
                            </div>*@
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Filter Menu
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" ng-model="bagSearch" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div ivh-treeview="bag"
                                     ivh-treeview-filter="bagSearch">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="submit" ng-click="SaveUserPermission()">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>