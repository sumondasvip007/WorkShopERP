@using HanifWorkShop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<style>
    .Color {
        color: #00897B !important;
    }
</style>





<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Login to your account</h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <div class="row">


                    <div class="col-md-6 col-md-offset-3" style="margin-top: 8%;margin-bottom: 9%">
                        <div class="panel panel-success">
                            <div class="panel-heading">Login</div>
                            <div class="panel-body">


                                @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="form-horizontal">

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">

                                            </label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                <label class="toast-error" style="color: #fff; margin-left: -3px; text-align: center">@TempData["errorMessage"]</label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                                Workshop
                                            </label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                <span class="add-on"><i class="halflings-icon home"></i></span>
                                                @Html.TextBoxFor(m => m.AgencyName, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Workshop"})
                                                @Html.ValidationMessageFor(m => m.AgencyName, "", new {@class = "text-danger"})
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                                Username
                                            </label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                <span class="add-on"><i class="halflings-icon home"></i></span>
                                                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Username"})
                                                @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                                Password
                                            </label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                <span class="add-on"><i class="halflings-icon home"></i></span>
                                                @Html.PasswordFor(m => m.Password, new {@class = "form-control col-md-7 col-xs-12", placeholder = "Password"})
                                                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-9">
                                                <button type="submit" class="btn btn-primary">Login</button>
                                            </div>
                                        </div>




                                        @*<div class="input-prepend" style="padding-top:0px; margin-top:-10px">
                                <h2 style="color:#00897B; font-weight:bold; font-size:22px">Login to your account</h2>
                            </div>*@
                                        @*<div class="input-prepend" style="padding:0px" title="Username">
                                <label class="toast-error" style="color:#fff;margin-left:-3px; text-align:center">@TempData["errorMessage"]</label>
                                <span class="add-on"><i class="halflings-icon home"></i></span>
                                @Html.TextBoxFor(m => m.AgencyName, new { @class = "input-large span10 Color", placeholder = "Agency" })
                                @Html.ValidationMessageFor(m => m.AgencyName, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"></div>
                            <div class="input-prepend" style="padding:0px" title="Username">
                                <span class="add-on"><i class="halflings-icon user"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "input-large span10 Color", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" style="padding:0px" title="Password">
